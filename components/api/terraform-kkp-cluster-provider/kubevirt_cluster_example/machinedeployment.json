{
  "name": "${machine_name}",
  "spec": {
    "template": {
      "cloud": {
        "kubevirt": {
          "cpus": "${cpus}",
          "memory": "${memory}",
          "primaryDiskOSImage": "${primaryDiskOSImage}",
          "primaryDiskStorageClassName": "${primaryDiskStorageClass}",
          "primaryDiskSize": "${disk_size}",
          "podAffinityPreset": "",
          "podAntiAffinityPreset": "soft",
          "nodeAffinityPreset": null
        }
      },
      "labels": {},
      "taints": [],
      "operatingSystem": {
        "ubuntu": {
          "distUpgradeOnBoot": false
        }
      },
      "versions": {
        "kubelet": "${kubernetes_version}"
      }
    },
    "replicas": ${replicas},
    "dynamicConfig": null,
    "minReplicas": null,
    "maxReplicas": null
  },
  "annotations": {
    "k8c.io/operating-system-profile": "osp-ubuntu"
  }
}